  pipeline{
    agent any
    stages {
        stage('Download Dependencies') {
            steps {
                sh '''
                npm install
            '''
            }
        }
        stage('prepare Artifacts') {
            steps {
                sh '''
                zip -r todo.zip *
            '''
            }
        }
        stage('upload Artifacts') {
            steps {
                sh '''
            curl -f -v -u admin:admin --upload-file users.zip http://10.1.2.210:8081/repository/todo/todo.zip
            '''
                }
           
        
            }
        }
    }
